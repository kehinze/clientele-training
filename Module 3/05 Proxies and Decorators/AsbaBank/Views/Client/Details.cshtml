@model AsbaBank.Presentation.Mvc.ViewModels.ClientViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="well">
    <dl class="dl-horizontal">
        <dt>
            Id
        </dt>
        <dd>
            @Model.Id
        </dd>

        <dt>
            Client Name
        </dt>
        <dd>
            @Model.ClientName
        </dd>
        
        <dt>
            Phone Number
        </dt>
        <dd>
            @Model.PhoneNumber
        </dd>

        <dt>
            Street Number
        </dt>
        <dd>
            @Model.StreetNumber
        </dd>

        <dt>
            Street
        </dt>
        <dd>
            @Model.Street
        </dd>

        <dt>
            City
        </dt>
        <dd>
            @Model.City
        </dd>

        <dt>
            Postal Code
        </dt>
        <dd>
            @Model.PostalCode
        </dd>
    </dl>
</div>
<form action="@Url.Action("OpenAccount", "Account", new { clientId=Model.Id })" method="POST" style="display: inline">
    <input type="submit" value="Open Account" class="btn btn-primary">
</form>

<h2>Accounts</h2>

<div class="well">
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Id
            </th>
            <th>
                Account Number
            </th>
            <th>
                Balance
            </th>
            <th>
                Status
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model.Accounts)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.AccountNumber
                </td>
                <td>
                    @item.Balance
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Account", new {id=item.Id}, new {})
                </td>
            </tr>
        }
    </table>
</div>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
